# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[{*.java, *.xml}]
indent_size = 4
continuation_indent_size = 8

[{*.json,*.html,*.ts,*.js}]
indent_size = 2
continuation_indent_size = 4

[*.scss]
indent_size = 2
continuation_indent_size = 8

[{*.yml,*.yaml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
